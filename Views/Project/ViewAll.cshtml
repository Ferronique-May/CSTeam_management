@model List<Website.Models.ProjectModel>;

@{
    ViewData["Title"] = "Project";
    int i = 0;
}

<div class="text-center">
    <h1 class="display-4">Projects Page</h1>
    <div class="col-2">
        <a asp-action="Add" class="btn btn-success form-control">Create Project</a>
    </div>
</div>
<hr/>



@foreach (ProjectModel item in Model)
{
    @if (item != null)
    {
@* <h2>@ViewData["Title"]</h2>
<hr /> *@
<div>
    <dl class="dl-horizontal">
        
        <h5>Project Name</h5>
        <dd>
            @Html.DisplayFor(model => model[i].Name)
        </dd>
        
        <h5>Decription</h5>
        <dd>
            @Html.DisplayFor(model => model[i].Description)
        </dd>

        <h5>Start Date</h5>
        <dd>
            @Html.DisplayFor(model => model[i].StartDate)
        </dd>

        <h5>Due Date</h5>
        <dd>
            @Html.DisplayFor(model => model[i].DueDate)
        </dd>

        <p>
            <button>Delete</button>
            <button>Edit</button>
            <button>View Tasks</button>
        </p>
        <hr>
    </dl>
</div>
    i++;

    }
}